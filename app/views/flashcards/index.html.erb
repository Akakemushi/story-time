<h1 class="text-center">Flashcards Directory</h1>
<!--Search bar with title and date-->
<div class="form">
  <%= form_tag flashcards_path, method: :get do %>
    <div>
      <%= text_field_tag :search_query, @search_query, placeholder: 'Search by title or date' %>
    </div>
    <div>
      <%= submit_tag 'Search' %>
    </div>
  </div>
<% end %>
<!--flashcards-->
<div class="container">
   <%# @flashcards.each do |flashcard| %>
  <div class="card">
    <div class="card-front">
      <h5> <%#= flashcard.story_segment.story.title %> </h5>
    </div>
    <div class="card-back">
      <h5>deez nutz</h5>
      <%= link_to 'Library', libraries_index_path, class: "btn btn-success" %>
    </div>
  </div>
<% #end %>
</div>
