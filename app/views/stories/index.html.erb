<div class="library-index">
  <h1 class="text-center my-3">Library</h1>
  <div class="container">
    <div class="story-cards">
      <% @stories.each do |story|%>
        <div class="card-story" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= story.story_segments.last.photo.attached? ? cl_image_path(story.story_segments.last.photo.key, crop: :fill) : image_path("galaxies.png") %>)">
          <div style="height: 50px; text-align: end; width: 100%;">
            <% if @unfinished_stories.include?(story) %>
              <%= image_tag "bookmark.png", alt: "bookmark", class: "h-100" %>
            <% end %>
          </div>
          <p><%= link_to story.title, story_path(story), style: "text-decoration: none; color: white;" %></p>
          <div>
            <%= link_to 'Flashcards', story_flashcards_path(story), class: "mb-3 btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
